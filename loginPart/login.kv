<LoginWin>:
    name: "login"
    email: email
    password: password

    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                # source: "login.jpeg"

        TextInput:
            id: email
            text_size: self.width, self.height
            multiline: False
            pos_hint: {"x": 0.1, "top":0.6}
            size_hint: 0.8, 0.05
            hint_text: "Email address"
            # hint_text_color: (1, 0, 0, 1)
            # opacity: 0.5
            valign: 'center'
        
        TextInput:
            id: password
            password: True
            # password_mask: "+"
            text_size: self.width, None
            multiline: False
            pos_hint: {"x": 0.1, "top":0.53}
            size_hint: 0.8, 0.05
            hint_text: "Password"
            valign: 'center'

        SmoothButton:
            pos_hint:{"x":0.1,"top":0.47}
            size_hint: 0.8, 0.07
            font_size: (root.width*2 + root.height*2) / (13*4)
            back_color: (0.5, 0.5, 0.5, 0.8)
            text: "Login"
            border_radius: [25, 2, 25, 2]
            on_release:
                root.loginBtn()

        Label:
            text:"Don't have an Account? [ref= ""][color=ff1000]SignUp[/color][/ref]"
            # text: 'Load Up [ref]some_link[/ref]'
            # font_size: (root.width**2 + root.height**2) / 14.5**4
            text_size:self.width,None
            pos_hint: {"x":0.1, "top":0.37}
            size_hint: 0.8, 0.05
            border: (30, 30, 30, 30)
            markup: True
            valign: 'center'
            halign: 'center'
            color: [0, 0, 0, 0.8]
            on_ref_press:
                root.manager.transition.direction = "up"
                root.go_signUpUser()

        Label:
            text:"Forgot your password? [ref= ""][color=00FF33]Here[/color][/ref]"
            # font_size: (root.width**2 + root.height**2) / 14.5**4
            text_size:self.width,None
            pos_hint: {"x":0.1, "top":0.32}
            size_hint: 0.8, 0.05
            border: (30, 30, 30, 30)
            markup: True
            valign: 'center'
            halign: 'center'
            color: [0, 0, 0, 0.8]



        Label:
            text:"User Login"
            font_size: (root.width*2 + root.height*2) / (14.5*2)
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.8, 0.15
            border: (30, 30, 30, 30)
            color: [0.5, 0.5, 0.5, 1]
            bold: True


<SmoothButton@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [25, 2, 25, 2]



