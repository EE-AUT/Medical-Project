<SignwinUser>:
    name: "signUser"
    email: email
    password: password
    r_password: r_password
    phoneNum: phoneNum
    userMsg: userMsg 
    fName: FName
    lName: LName


    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                # source: "login.jpeg"



        TextInput:
            id: FName
            multiline: False
            pos_hint: {"x": 0.1, "top":0.76}
            size_hint: 0.8, 0.05
            hint_text: "First Name"
            # hint_text_color: (1, 0, 0, 1)
            # opacity: 0.5
            valign: 'center'
            on_text:
                root.error([root.email, root.password, root.r_password, root.phoneNum], color= (1, 1, 1, 1), Hide= True, clr= True)


        TextInput:
            id: LName
            multiline: False
            pos_hint: {"x": 0.1, "top":0.69}
            size_hint: 0.8, 0.05
            hint_text: "Last Name"
            # hint_text_color: (1, 0, 0, 1)
            # opacity: 0.5
            valign: 'center'
            on_text:
                root.error([root.email, root.password, root.r_password, root.phoneNum], color= (1, 1, 1, 1), Hide= True, clr= True)


        TextInput:
            id: email
            multiline: False
            pos_hint: {"x": 0.1, "top":0.62}
            size_hint: 0.8, 0.05
            hint_text: "Email address"
            # hint_text_color: (1, 0, 0, 1)
            # opacity: 0.5
            valign: 'center'
            on_text:
                root.error([root.email, root.password, root.r_password, root.phoneNum], color= (1, 1, 1, 1), Hide= True, clr= True)
        
        TextInput:
            id: phoneNum
            multiline: False
            pos_hint: {"x": 0.1, "top":0.54}
            size_hint: 0.8, 0.05
            hint_text: "Phone Number"
            valign: 'center'
            on_text:
                root.error([root.email, root.password, root.r_password, root.phoneNum], color= (1, 1, 1, 1), Hide= True, clr= True)


        TextInput:
            id: password
            password: True
            multiline: False
            pos_hint: {"x": 0.1, "top":0.47}
            size_hint: 0.8, 0.05
            hint_text: "Password"
            valign: 'center'
            on_text:
                root.error([root.email, root.password, root.r_password, root.phoneNum], color= (1, 1, 1, 1), Hide= True, clr= True)

        TextInput:
            id: r_password
            password: True
            multiline: False
            pos_hint: {"x": 0.1, "top":0.40}
            size_hint: 0.8, 0.05
            hint_text: "repeat Password"
            valign: 'center'
            on_text:
                root.error([root.email, root.password, root.r_password, root.phoneNum], color= (1, 1, 1, 1), Hide= True, clr= True)


        SmoothButton:
            pos_hint:{"x":0.1,"top":0.33}
            size_hint: 0.8, 0.07
            font_size: "25sp"
            # disabled: True
            back_color: (0.5, 0.5, 0.5, 0.8)
            text: "Submit"
            # border_radius: [25, 2, 25, 2]
            on_release:
                root.submitBtnUser()

        Label:
            text:"Have you already an Account? [ref= ""][color=ff1000]Login[/color][/ref]"
            pos_hint: {"x":0.1, "top":0.23}
            size_hint: 0.8, 0.05
            border: (30, 30, 30, 30)
            markup: True
            valign: 'center'
            halign: 'center'
            color: [0, 0, 0, 0.8]
            on_ref_press:
                root.manager.transition.direction = "down"
                root.go_loginWin()

        Label:
            text:"Do You wanna register as a doctor? [ref= ""][color=00FF33]Here[/color][/ref]"
            pos_hint: {"x":0.1, "top":0.18}
            size_hint: 0.8, 0.05
            border: (30, 30, 30, 30)
            markup: True
            valign: 'center'
            halign: 'center'
            color: [0, 0, 0, 0.8]



        Label:
            text:"User SignUp"
            font_size: "45sp"
            pos_hint: {"x":0.1, "top":0.95}
            size_hint: 0.8, 0.15
            border: (30, 30, 30, 30)
            color: [0.5, 0.5, 0.5, 1]
            bold: True

        Label:
            id: userMsg
            text:"userMsg"
            font_size: "20sp"
            opacity: 0
            pos_hint: {"x":0.1, "top":0.13}
            size_hint: 0.8, 0.15
            color: [1, 0.4, 0.2, 1]
            valign: 'center'
            halign: 'center'
            bold: True


<SmoothButton@Button>:
    background_color: (0, 0, 0, 0)
    background_normal: ''
    back_color: (1, 0, 1, 1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [30, 2, 30, 2]
            